{
    "manifest_version": 2,
    "name": "kris2Assist",
    "description": "Your basic Hello World extension!",
    "version": "1.0",
    "author": "Mehrez Kristou",
    "applications": {
        "gecko": {
            "id": "mehrez@kristou.com",
            "strict_min_version": "78.0"
        }
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "Kris2Assist",
        "default_icon": "images/logo-32px.png"
    },
    "message_display_action": {
        "default_popup": "message.html",
        "default_title": "Kris2Assist",
        "default_icon": "images/logo-32px.png"
    },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": false,
        "browser_style": true
    },
    "background": {
        "page": "background.html"
    },
    "permissions": [
        "*://kris2assistor.herokuapp.com/*",
        "messagesRead",
        "accountsRead",
        "storage",
        "menus",
        "notifications",
        "messagesModify"
    ],
    "icons": {
        "64": "images/logo.png",
        "32": "images/logo-32px.png",
        "16": "images/logo-16px.png"
    },
    "default_locale": "en"
}